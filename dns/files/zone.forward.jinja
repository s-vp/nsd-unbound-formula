{#% set config = salt['pillar.get']('postfix:config', {}) -%#}
{%- from "postfix/defaults.yaml" import rawmap with context -%}
{%- set config = salt['grains.filter_by'](rawmap, grain='os', merge=salt['pillar.get']('postfix:config')) %}
{% set processed_parameters = ['aliases', 'virtual'] -%}
{% macro set_parameter(parameter, default=None) -%}
{% set value = config.get(parameter, default) -%}
{% if value is not none -%}
{{ parameter }} = {{ value }}
{%- do processed_parameters.append(parameter) -%}
{% endif -%}
{% endmacro -%}
